    /** Product Modal **/
    #product-modal.modal.fade aria-labelledby="myModalLabel" role="dialog" tabindex="-1"
      .modal-dialog role="document"
        .modal-content
          .modal-header
            button.close aria-label="Close" data-dismiss="modal" type="button"
              span aria-hidden="true"  &times;
            h4#myModalLabel.modal-title WeGamersLove 公益週邊
          .modal-body
            table.table.table-hover.visible-xs
              thead
                tr
                  th colspan="2" 遊戲周邊
              tbody
                - data.product.products.donate_game.each do |item|
                  tr
                    th colspan="2" = item.name
                  - item.list.each_with_index do |item, index|
                    tr
                      td
                        = index+1
                        | .
                      td = item
              thead
                tr
                  th colspan="2" 其他周邊
              tbody
                - data.product.products.donate_other.each do |item|
                  tr
                    th colspan="2" = item.name
                  - item.list.each_with_index do |item, index|
                    tr
                      td
                        = index+1
                        | .
                      td = item
              thead
                tr
                  th colspan="2" 抽獎贈品
              tbody
                - data.product.products.lucky_draw.each_with_index do |item, index|
                  tr
                    td
                      = index+1
                      | .
                    td = item

            table.table.table-hover.hidden-xs
              thead
                tr
                  th colspan="3" 遊戲周邊
              tbody
                - data.product.products.donate_game.each do |item|
                  tr
                    th rowspan="#{item.list.length + 1}" = item.name
                  - item.list.each_with_index do |item, index|
                    tr
                      td
                        = index+1
                        | .
                      td = item
              thead
                tr
                  th colspan="3" 其他周邊
              tbody
                - data.product.products.donate_other.each do |item|
                  tr
                    th rowspan="#{item.list.length + 1}" = item.name
                  - item.list.each_with_index do |item, index|
                    tr
                      td
                        = index+1
                        | .
                      td = item
              thead
                tr
                  th colspan="3" 抽獎贈品
              tbody
                - data.product.products.lucky_draw.each_with_index do |item, index|
                  tr
                    td colspan="3"
                      span 
                        = index+1
                        | . 
                      = item

          .modal-footer
            button.btn.btn-default data-dismiss="modal" type="button"  Close